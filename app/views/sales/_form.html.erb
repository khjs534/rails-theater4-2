<%= form_for [@showing, @sale] do |f| %>
  <%= render 'errors', :thing => @sale %>
  <p>
    <%= f.label :customer_name%>
    <%= f.text_field :customer_name%>
  </p>
  <p>
    <%= f.label :customer_email%>
    <%= f.text_field :customer_email%>
  </p>
    <%= f.hidden_field :showing_id, :value => @showing.id %>
  <p>
    <%= f.submit%>
  </p>
<% end %>
